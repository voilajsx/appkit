{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./types",
    "rootDir": "./src",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": ["src/**/*.js"],
  "exclude": [
    "node_modules",
    "types",
    "**/test/**",
    "**/tests/**",
    "**/*.test.js",
    "**/*.spec.js",
    "src/auth/tests/**/*",
    "src/**/tests/**/*",
    "src/**/__tests__/**/*"
  ]
}