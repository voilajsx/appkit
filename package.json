{
  "name": "@voilajsx/appkit",
  "version": "1.0.16",
  "description": "A minimal, framework-agnostic Node.js application toolkit",
  "main": "dist/index.js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    "./auth": {
      "types": "./dist/auth/index.d.ts",
      "default": "./dist/auth/index.js"
    },
    "./database": {
      "types": "./dist/database/index.d.ts",
      "default": "./dist/database/index.js"
    },
    "./security": {
      "types": "./dist/security/index.d.ts",
      "default": "./dist/security/index.js"
    },
    "./error": {
      "types": "./dist/error/index.d.ts",
      "default": "./dist/error/index.js"
    },
    "./logging": {
      "types": "./dist/logging/index.d.ts",
      "default": "./dist/logging/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "default": "./dist/config/index.js"
    }
  },
  "files": [
    "types/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage --run",
    "test:ui": "vitest --ui",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.js'",
    "build": "tsc",
    "build:types": "tsc",
    "prepublishOnly": "npm test && npm run build:types",
    "version": "npm test",
    "build:docs": "node scripts/build-docs.js",
    "deploy:docs": "node scripts/build-docs.js && node scripts/deploy-docs.js",
    "preview:docs": "npx serve gh-pages"
  },
  "keywords": [
    "nodejs",
    "node",
    "toolkit",
    "framework-agnostic",
    "auth",
    "authentication",
    "jwt",
    "bcrypt",
    "multi-tenant",
    "tenant",
    "database",
    "saas",
    "cache",
    "caching",
    "redis",
    "memcached",
    "events",
    "event-bus",
    "pubsub",
    "security",
    "csrf",
    "rate-limiting",
    "sanitization",
    "email",
    "smtp",
    "ses",
    "sendgrid",
    "mailgun",
    "queue",
    "job-queue",
    "background-jobs",
    "logging",
    "logger",
    "storage",
    "s3",
    "file-storage",
    "configuration",
    "config",
    "validation",
    "utils",
    "utilities",
    "express",
    "middleware",
    "error-handling"
  ],
  "author": "VoilaJS",
  "contributors": [
    {
      "name": "Krishna Teja GS",
      "email": "kt@voilacode.com",
      "url": "https://voilacode.com"
    }
  ],
  "creator": "Krishna Teja GS",
  "license": "MIT",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/formbody": "^8.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/session": "^11.1.0",
    "@voilajsx/appkit": "github:voilajsx/appkit",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.6.1",
    "express-session": "^1.18.1",
    "fastify": "^5.3.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.8",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.10.0",
    "@vitest/coverage-v8": "^3.1.3",
    "esbuild": ">=0.25.0",
    "eslint": "^9.0.0",
    "express": "^5.1.0",
    "prettier": "^3.2.4",
    "supertest": "^7.1.1",
    "typescript": "^5.0.0",
    "vitest": "^3.1.3"
  },
  "optionalDependencies": {
    "@aws-sdk/client-s3": "^3.0.0",
    "@aws-sdk/client-ses": "^3.0.0",
    "@aws-sdk/s3-request-presigner": "^3.0.0",
    "@sendgrid/mail": "^8.1.5",
    "bull": "^4.10.0",
    "mailgun.js": "^9.0.0",
    "memcached": "^2.2.2",
    "mongoose": "^7.0.0",
    "mysql2": "^3.5.0",
    "nodemailer": "^6.10.1",
    "pg": "^8.11.0",
    "redis": "^4.7.1",
    "sqlite": "^4.2.1",
    "sqlite3": "^5.1.6"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/voilajsx/appkit.git"
  },
  "bugs": {
    "url": "https://github.com/voilajsx/appkit/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/voilajsx/appkit#readme"
}
